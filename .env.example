# MCP Persistent Shell Configuration

# Server Configuration (use __ for nested configs)
MCP_SHELL_SERVER__NAME=mcp-persistent-shell
MCP_SHELL_SERVER__VERSION=0.1.0
MCP_SHELL_SERVER__HOST=127.0.0.1
MCP_SHELL_SERVER__PORT=3000

# Security Configuration File (optional - overrides env vars)
MCP_SHELL_CONFIG_FILE=

# Logging Configuration
MCP_SHELL_LOGGING__LEVEL=info
MCP_SHELL_LOGGING__FORMAT=json

# Session Configuration
MCP_SHELL_SESSION__TIMEOUT=3600
MCP_SHELL_SESSION__MAX_SESSIONS=100
MCP_SHELL_SESSION__CLEANUP_INTERVAL=300

# Shell Configuration
MCP_SHELL_SHELL__DEFAULT_SHELL=/bin/bash
MCP_SHELL_SHELL__PROMPT_MARKER=__MCP_SHELL_PROMPT__

# Security Configuration (individual fields - prefer using YAML file)
MCP_SHELL_SECURITY__ENABLED=false
MCP_SHELL_SECURITY__WORKING_DIRECTORY=/workspace
MCP_SHELL_SECURITY__MAX_EXECUTION_TIME=30
MCP_SHELL_SECURITY__MAX_OUTPUT_SIZE=1048576
